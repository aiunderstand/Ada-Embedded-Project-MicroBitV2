{
	"version": "2.0.0",
	"tasks": [
        {
			"type": "shell",
			"command": "pyocd",
			"args": [
				"load",
                "-t",
                "nrf52833",
                "--format",
                "elf",
				"Code/obj/main"
			],
			"group": {
                "kind": "build",
                "isDefault": true
            },
			"label": "Build & Flash",
            "dependsOn":["Build"]
		},
		{
			"type": "shell",
            "command": "zsh -c 'source /root/.zshrc && gprbuild -P Code/itrs.gpr Code/src/main.adb -cargs:ada -gnatef'",
            "problemMatcher": [
                "$ada"
            ],
			"group": "build",
			"label": "Build"
		},
        {
			"type": "shell",
			"command": "pyocd",
			"args": [
				"load",
                "-t",
                "nrf52833",
                "--format",
                "elf",
				"Code/obj/main"
			],
            "group": "build",
			"label": "Flash"
		},
        {
			"type": "shell",
			"command": "pyocd",
			"args": [
				"erase",
                "--mass",
                "-t",
                "nrf52833"
			],
            "group": "build",
			"label": "Erase"
		}
	]

}
